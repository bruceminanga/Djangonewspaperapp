# Django Settings
# Set to True for development, and False for production
DEBUG=True

# IMPORTANT: Generate a new secret key for your environment.
# Do NOT use this example value in production.
SECRET_KEY=

# A space-separated list of allowed hosts.
# Example: "yourdomain.com www.yourdomain.com"
DJANGO_ALLOWED_HOSTS=localhost 127.0.0.1

# Database connection URL.
# Default to SQLite for easy local setup.
# For PostgreSQL, it would look like: postgresql://USER:PASSWORD@HOST:PORT/NAME
DATABASE_URL=sqlite:///db.sqlite3


# --- Optional PostgreSQL Settings ---
# These are typically used if you are NOT using the DATABASE_URL format above.
# Fill these in if you are configuring a PostgreSQL database directly.
POSTGRES_DB=
POSTGRES_USER=
POSTGRES_PASSWORD=